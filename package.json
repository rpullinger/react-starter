{
  "scripts": {
    "preclean": "mkdir -p build",
    "clean": "rm -r build",
    "postclean": "npm run preclean",
    "test": "NODE_ENV=production mocha-webpack --webpack-config webpack.config.js 'app/**/*.test.js' --colors --reporter list",
    "watch:test": "npm run test -- --watch",
    "build:js": "webpack -p",
    "watch:js": "webpack --progress --colors --watch",
    "dev:server": "webpack-dev-server --progress --colors --open --hot --inline --content-base build/",
    "predev:server": "npm run build:static & open http://localhost:8080/",
    "build:static": "cp -r public/* build/",
    "watch:static": "chokidar 'public/**/*' -c 'npm run build:static'",
    "prewatch": "npm run clean",
    "watch": "parallelshell 'npm run dev:server' 'npm run watch:static' 'npm run watch:test'",
    "prebuild": "npm run clean",
    "build": "parallelshell 'npm run build:static' 'npm run build:js'"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "parallelshell": "^2.0.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "react": "^0.14.8",
    "react-dom": "^0.14.8"
  }
}
